<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-completion-table" author="matthew">
        <createTable tableName="completions">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_completion_user" references="users(id)"/>
            </column>
            <column name="form_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_completion_form" references="form(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="insert-completion-1" author="alexey">
        <insert tableName="completions">
            <column name="user_id" value="2"/>
            <column name="form_id" value="1"/>
        </insert>
    </changeSet>

    <changeSet id="insert-completion-2" author="alexey">
        <insert tableName="completions">
            <column name="user_id" value="3"/>
            <column name="form_id" value="1"/>
        </insert>
    </changeSet>

    <changeSet id="insert-completion-3" author="alexey">
        <insert tableName="completions">
            <column name="user_id" value="4"/>
            <column name="form_id" value="1"/>
        </insert>
    </changeSet>

</databaseChangeLog>
